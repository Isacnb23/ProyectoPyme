@model TableViewModel

<div class="w-full overflow-x-auto shadow-md sm:rounded-lg bg-white border-gray-300">
    <table class="min-w-full text-left text-gray-500">
        <thead class="bg-gray-50 text-gray-700">
            <tr>
                <th class="px-6 py-3 uppercase text-center">Acciones</th>
                @if (Model.Columns != null && Model.Columns.Any())
                {
                    foreach (var c in Model.Columns)
                    {
                        <th class="px-6 py-3 uppercase text-center">@c.Label</th>
                    }
                }
            </tr>
        </thead>

        <tbody>
            @if (Model.Rows != null && Model.Rows.Any())
            {
                foreach (var row in Model.Rows)
                {
                    var rowId = row.GetType().GetProperty("Id")?.GetValue(row, null);
                    <tr class="bg-white border-b hover:bg-gray-50 border-gray-200">
                        <!-- Actions -->
                        <td class="px-6 py-4 text-center">
                            <div class="flex items-center justify-center gap-3">
                                <a href="@Url.Action("Edit", Model.ControllerName, new { id = rowId })" class="text-[color:var(--primary)] hover:text-[color:var(--primary-dark)]">
                                    <i data-lucide="pencil" class="w-5 h-5"></i>
                                </a>
                                <a href="@Url.Action("Delete", Model.ControllerName, new { id = rowId })" class="text-[color:var(--error)] hover:text-red-700">
                                    <i data-lucide="trash-2" class="w-5 h-5"></i>
                                </a>
                                <a href="@Url.Action("Details", Model.ControllerName, new { id = rowId })" class="text-[color:var(--secondary)] hover:text-emerald-600">
                                    <i data-lucide="eye" class="w-5 h-5"></i>
                                </a>
                            </div>
                        </td>

                        @foreach (var col in Model.Columns)
                        {
                            var value = row.GetType().GetProperty(col.Key)?.GetValue(row, null);
                            <td class="px-6 py-4 text-center @(col.Class ?? "")">@value</td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(Model.Columns.Count + 1)" class="text-center py-4 text-gray-400">No data available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
