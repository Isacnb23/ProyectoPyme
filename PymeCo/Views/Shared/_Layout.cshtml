<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PymeCo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PymeCo.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/a2b4d3b6b5.js" crossorigin="anonymous"></script>


</head>
<body class="flex flex-col w-screen min-h-screen bg-gray-50 overflow-x-hidden">
    <!-- Topbar -->
    @await Html.PartialAsync("_Topbar")

    <!-- Side to side layout -->
    <div class="flex flex-1">
        @await Html.PartialAsync("_Sidebar")

        <main class="flex-1 p-6">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("_Footer")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
