@* Views/Shared/_Topbar.cshtml *@
<header class="flex items-center justify-between p-4 bg-white shadow-sm">
    <!-- Left: Logo -->
    <div class="flex items-center gap-2">
        <h1 class="text-2xl font-bold cursor-pointer bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-400 ml-4">
            <a asp-controller="Home" asp-action="Index">Pyme Co.</a>
        </h1>
    </div>

    <!-- Center: Search bar -->
    <div class="flex items-center w-1/3">
        <div class="relative w-full">
            <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 w-4 h-4"></i>
            <input type="text"
                   placeholder="Buscar productos, clientes, pedidos..."
                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-600" />
        </div>
    </div>

    <!-- Right -->
    <div class="flex items-center gap-4">
        <button class="text-gray-600 hover:text-blue-600 transition-colors">
            <i class="fa-regular fa-bell w-5 h-5"></i>
        </button>
        <button class="text-gray-600 hover:text-blue-600 transition-colors">
            <i class="fa-solid fa-gear w-5 h-5"></i>
        </button>

        <div class="w-px h-6 bg-gray-300"></div>

        <div class="flex items-center gap-2 cursor-pointer hover:bg-gray-100 rounded-full px-3 py-1 transition-colors">
            <img src="https://ui-avatars.com/api/?name=User&background=2563EB&color=fff"
                 alt="User avatar"
                 class="w-8 h-8 rounded-full" />
            <span class="text-gray-700 font-medium">Admin</span>
            <i class="fa-solid fa-chevron-down w-4 h-4 text-gray-500"></i>
        </div>
    </div>
</header>
