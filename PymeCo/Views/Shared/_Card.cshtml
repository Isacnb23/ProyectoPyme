@{
    // Optional parameters
    var hoverable = ViewData["Hoverable"] as bool? ?? false;
    var padded = ViewData["Padded"] as bool? ?? true;
}

<section class="rounded-2xl border border-slate-200 bg-white shadow-[0_10px_30px_-15px_rgba(0,0,0,0.15)]
    @(hoverable ? "transition hover:shadow-[0_18px_38px_-12px_rgba(0,0,0,0.25)]" : "")">

    @* Header slot *@
    @if (IsSectionDefined("CardHeader"))
    {
        <header class="border-b border-slate-200 px-5 py-4">
            @RenderSection("CardHeader", required: false)
        </header>
    }

    <div class="@(padded ? "px-5 py-5" : "")">
        @RenderBody()
    </div>

    @* Footer slot *@
    @if (IsSectionDefined("CardFooter"))
    {
        <footer class="border-t border-slate-200 px-5 py-4">
            @RenderSection("CardFooter", required: false)
        </footer>
    }
</section>
