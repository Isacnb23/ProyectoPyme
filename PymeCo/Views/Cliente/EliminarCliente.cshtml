            </button>
        }*@
        @using (Html.BeginForm("EliminarCliente", "Cliente", FormMethod.Post, new { @class = "flex items-center gap-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <input type="hidden" name="id" value="@Model.Id" /> <!-- blindaje -->

            <a href="@Url.Action("ListarCliente", "Cliente")" class="px-4 py-2 rounded-xl border border-gray-300 hover:bg-gray-50">
                Cancelar
            </a>
            <button type="submit" class="px-4 py-2 rounded-xl bg-red-600 text-white hover:bg-red-700">
                Eliminar definitivamente
            </button>
        }

    </div>
</div>
