@model Pyme.Abstracciones.ModelosParaUI.ClienteDto
@{
    ViewBag.Title = "Eliminar Cliente";
}

<div class="max-w-3xl mx-auto mt-6">
    <div class="rounded-2xl shadow p-6 bg-white">
        <div class="flex items-center gap-3 mb-4">
            <i data-lucide="trash-2" class="text-red-600"></i>
            <h1 class="text-2xl font-semibold text-[color:var(--txt-primary)]">Eliminar Cliente</h1>
        </div>

        <div class="p-4 rounded-lg border border-red-200 bg-red-50 text-red-800 mb-4">
            <p><strong>Advertencia:</strong> Esta acción eliminará al cliente de forma permanente.</p>
        </div>

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6 text-[color:var(--txt-primary)]">
            <div>
                <dt class="text-sm text-gray-500">Nombre</dt>
                <dd class="text-base font-medium">@Model.Nombre</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Cédula</dt>
                <dd class="text-base font-medium">@Model.Cedula</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Correo</dt>
                <dd class="text-base font-medium">@Model.Correo</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Teléfono</dt>
                <dd class="text-base font-medium">@Model.Telefono</dd>
            </div>
            <div class="md:col-span-2">
                <dt class="text-sm text-gray-500">Dirección</dt>
                <dd class="text-base font-medium">
                    @(string.IsNullOrWhiteSpace(Model.Direccion) ? "No registrada" : Model.Direccion)
                </dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Fecha de Registro</dt>
                <dd class="text-base font-medium">
                    @(Model.FechaRegistro != DateTime.MinValue ? Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm") : "N/A")
                </dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Última Modificación</dt>
                <dd class="text-base font-medium">
                    @(Model.FechaModificacion.HasValue ? Model.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm") : "No modificada")
                </dd>
            </div>
        </dl>

