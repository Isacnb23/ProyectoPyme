@model Pyme.Abstracciones.ModelosParaUI.ProductoDto
@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="max-w-3xl mx-auto mt-6">
    <div class="rounded-2xl shadow p-6 bg-white">
        <div class="flex items-center gap-3 mb-4">
            <i data-lucide="trash-2"></i>
            <h1 class="text-2xl font-semibold">Eliminar Producto</h1>
        </div>

        <div class="p-4 rounded-lg border border-red-200 bg-red-50 text-red-800 mb-4">
            <p><strong>Advertencia:</strong> Esta acción eliminará el producto de forma permanente.</p>
        </div>

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div>
                <dt class="text-sm text-gray-500">Nombre</dt>
                <dd class="text-base font-medium">@Model.Nombre</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Categoría</dt>
                <dd class="text-base font-medium">@Model.CategoriaNombre</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Precio</dt>
                <dd class="text-base font-medium">₡ @Model.Precio.ToString("N2")</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Impuesto</dt>
                <dd class="text-base font-medium">@Model.ImpuestoPorc.ToString("N2") %</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Stock</dt>
                <dd class="text-base font-medium">@Model.Stock</dd>
            </div>
            <div>
                <dt class="text-sm text-gray-500">Estado</dt>
                <dd>
                    @if (Model.EstadoProducto)
                    {<span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Activo</span> }
                    else
                    { <span class="px-2 py-1 text-xs rounded-full bg-gray-200 text-gray-700">Inactivo</span>}
                </dd>
            </div>
        </dl>

        @using (Html.BeginForm("EliminarProducto", "Producto", FormMethod.Post, new { @class = "flex items-center gap-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <a href="@Url.Action("ListarProducto", "Producto")" class="px-4 py-2 rounded-xl border border-gray-300 hover:bg-gray-50">
                Cancelar
            </a>

            <button type="submit" class="px-4 py-2 rounded-xl bg-red-600 text-white hover:bg-red-700">
                Eliminar definitivamente
            </button>
        }
    </div>
</div>

